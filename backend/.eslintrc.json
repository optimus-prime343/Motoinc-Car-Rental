{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "plugins": [
        "simple-import-sort"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "req|res|next|^_"
            }
        ]
    }
}